{%- comment -%}
  AE Section Template - Rhode-Style Container System
  Standard-Template für alle neuen Sections mit einheitlichen Abständen
{%- endcomment -%}

<section 
  class="ae-{{ section.settings.section_name | default: 'section' }}"
  data-section-id="{{ section.id }}"
  data-section-type="ae-{{ section.settings.section_name | default: 'section' }}"
  style="
    --section-padding-top: {{ section.settings.padding_top_mobile | default: 40 }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom_mobile | default: 40 }}px;
    --section-padding-top-desktop: {{ section.settings.padding_top_desktop | default: 80 }}px;
    --section-padding-bottom-desktop: {{ section.settings.padding_bottom_desktop | default: 80 }}px;
  "
>
  {%- comment -%} Section Container - Automatisches Rhode-Style Spacing {%- endcomment -%}
  <div class="section-container">
    
    {%- comment -%} Section Content hier einfügen {%- endcomment -%}
    <div class="ae-{{ section.settings.section_name | default: 'section' }}__content">
      
      {%- if section.settings.heading != blank -%}
        <h2 class="ae-{{ section.settings.section_name | default: 'section' }}__heading">
          {{ section.settings.heading }}
        </h2>
      {%- endif -%}
      
      {%- if section.settings.text != blank -%}
        <div class="ae-{{ section.settings.section_name | default: 'section' }}__text">
          {{ section.settings.text }}
        </div>
      {%- endif -%}
      
      {%- comment -%} Hier weitere Section-spezifische Inhalte einfügen {%- endcomment -%}
      
    </div>
    
  </div>
</section>

{%- comment -%} Section-spezifische Styles {%- endcomment -%}
<style>
  .ae-{{ section.settings.section_name | default: 'section' }} {
    padding-top: var(--section-padding-top);
    padding-bottom: var(--section-padding-bottom);
  }
  
  @media (min-width: 768px) {
    .ae-{{ section.settings.section_name | default: 'section' }} {
      padding-top: var(--section-padding-top-desktop);
      padding-bottom: var(--section-padding-bottom-desktop);
    }
  }
  
  .ae-{{ section.settings.section_name | default: 'section' }}__heading {
    font-size: var(--text-3xl);
    font-weight: 700;
    margin-bottom: var(--space-6);
    color: var(--foreground);
  }
  
  .ae-{{ section.settings.section_name | default: 'section' }}__text {
    font-size: var(--text-lg);
    line-height: 1.6;
    color: var(--muted-foreground);
  }
</style>

{% schema %}
{
  "name": "AE Section Template",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Section Settings"
    },
    {
      "type": "text",
      "id": "section_name",
      "label": "Section Name",
      "default": "section",
      "info": "Wird für CSS-Klassen verwendet"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Section Heading"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>Section content goes here.</p>"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "label": "Top Padding (Mobile)",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "label": "Bottom Padding (Mobile)",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_top_desktop",
      "label": "Top Padding (Desktop)",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom_desktop",
      "label": "Bottom Padding (Desktop)",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "default": 80
    }
  ],
  "presets": [
    {
      "name": "AE Section Template"
    }
  ]
}
{% endschema %}